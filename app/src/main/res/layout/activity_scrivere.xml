<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7FFA7"
    tools:context=".AppPavone.ActivityScrivere">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="?attr/colorSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/button_indietro"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="270dp"
                android:layout_height="56dp"
                android:autoSizeTextType="uniform"
                android:layout_marginStart="4dp"
                android:paddingTop="3dp"
                android:text="Scegli"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintStart_toEndOf="@+id/button_indietro"
                tools:layout_editor_absoluteY="6dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:progressTint="#273CB3"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminateTint="@android:color/black"
        app:layout_constraintVertical_bias="0.39" />

    <ImageView
        android:id="@+id/help1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/animation_pointing"
        android:elevation="7dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/button_Ascolta2"
        app:layout_constraintEnd_toEndOf="@+id/button_Ascolta2" />

    <ImageView
        android:id="@+id/help2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/animation_pointing"
        android:elevation="7dp"
        android:rotation="50"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button_Risp1"
        app:layout_constraintStart_toStartOf="@+id/button_Risp1" />

    <ImageView
        android:id="@+id/help3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/animation_pointing"
        android:elevation="7dp"
        android:scaleX="-1"
        android:rotation="310"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button_Risp2"
        app:layout_constraintEnd_toEndOf="@+id/button_Risp2" />

    <ImageView
        android:id="@+id/help4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/animation_pointing"
        android:elevation="7dp"
        android:scaleY="-1"
        android:rotation="310"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/button_Risp3"
        app:layout_constraintTop_toBottomOf="@+id/button_Risp3" />

    <ImageView
        android:id="@+id/help5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/animation_pointing"
        android:elevation="7dp"
        android:rotation="50"
        android:scaleX="-1"
        android:scaleY="-1"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/button_Risp4"
        app:layout_constraintTop_toBottomOf="@+id/button_Risp4" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_Ascolta2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:foreground="@drawable/audio"
        android:foregroundTint="@color/verdepistacchio"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_Scrivere" />

    <Button
        android:id="@+id/button_Risp1"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/verdepistacchio"
        app:layout_constraintEnd_toStartOf="@+id/button_Risp2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Ascolta2" />

    <Button
        android:id="@+id/button_Risp3"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/verdepistacchio"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/button_Risp4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Risp1" />

    <Button
        android:id="@+id/button_Risp2"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/verdepistacchio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Ascolta2" />

    <Button
        android:id="@+id/button_Risp4"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/verdepistacchio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Risp2" />

    <ImageView
        android:id="@+id/esito1"
        android:layout_width="75dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_Risp3"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_Scrivere"
        android:layout_width="290dp"
        android:layout_height="320dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        app:layout_constraintVertical_bias="0.01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_Scrivere"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:scaleType="fitXY" />

            <Spinner
                android:id="@+id/spinner_Corpo"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:visibility="visible"
        android:id="@+id/button_aiuto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/teal_800"
        android:background="@drawable/ic_baseline_help_outline_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/button_avanti"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_avanti"
        android:text="Avanti"
        android:textColor="@color/white"
        android:textAlignment="viewStart"
        android:paddingLeft="15dp"
        android:textSize="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>